.cf-order-total-row {
	border-top: 1px solid #DDD;
	margin-top: .5em
}
.cf-order-total-row .product-name {
	font-weight: bold;
}
.cf-order-total-row .product-price {
	font-weight: bold;
}
[data-de-type='ors'] .elOrderProductOptinLabel .elOrderProductOptinItem {
	/* margin-left: 2em; */
}
[data-de-type='ors'] .qty-head {
	width: 3em;
}
.prodQty {
	display: inline-block;
	width: 3em;
}
</style>
